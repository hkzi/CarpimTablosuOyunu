@model CarpimTablosuOyunu.GameModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çarpım Tablosu Oyunu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
            background-color: #f4f4f4;
        }

        .container {
            display: inline-block;
            border: 1px solid #ddd;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        h1 {
            color: #4CAF50;
            font-size: 36px;
            margin-bottom: 20px;
        }

        .question {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .input-group {
            margin: 10px 0;
        }

            .input-group input {
                font-size: 18px;
                padding: 10px;
                width: 80px;
                text-align: center;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .btn {
            font-size: 18px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

            .btn:hover {
                background-color: #45a049;
            }

        .message {
            margin-top: 20px;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }

        .score {
            font-size: 20px;
            margin-top: 20px;
        }

            .score strong {
                color: #4CAF50;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Çarpım Tablosu Oyunu</h1>

        <p class="question">
            Soru: <strong>@Model.Sayi1</strong> x <strong>@Model.Sayi2</strong> = ?
        </p>

        <form method="post" asp-action="Kontrol">
            <div class="input-group">
                <input type="number" name="cevap" placeholder="Cevap" required />
            </div>
            <button type="submit" class="btn">Gönder</button>
        </form>

        <div class="score">
            <p>Puan: <strong>@Model.Puan</strong></p>
            <p>En Yüksek Puan: <strong>@Model.EnYuksekPuan</strong></p> <!-- En yüksek puan buraya eklendi -->
    
            @* @if (Model.Puan >= Model.HedefPuan)
            {
                <p><strong>TEBRİKLER!</strong> Hedef Puanına Ulaştınız!</p>
            } *@
        </div>

        @if (ViewBag.DogruMu != null)
        {
            <div class="message">
                @if ((bool)ViewBag.DogruMu)
                {
                    <p class="success">Doğru cevap verdiniz!</p>
                }
                else
                {
                    <p class="error">Yanlış! Doğru cevap: @Model.DogruCevap</p>
                }
            </div>
        }

        </div>
</body>
</html>
